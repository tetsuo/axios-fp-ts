{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "declaration": true,
    "lib": ["es6", "es2015", "DOM"],
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/*"]
}
